<% provide(:title, @detection.code) %>

<% if flash.nil? %>
	<h2><strong>Thank you for your collaboration!</strong></h2>
<% else %>
	<h2>Results for detection <strong><%= @detection.code %></strong></h2>
<% end %>

<div class="row-fluid">
	<div class="span3">Detection code: <strong><%= @detection.code%></strong></div>
	<div class="span8">Here are your results:</div>
</div>
<div class="row-fluid">
	<div class="span4 offset4">
		<table class="table table-hover">
			<caption><strong>Detection results</strong></caption>
			<tr class="success">
				<td>True positives: <%= @detection.tp%></td>
				<td>True negatives: <%= @detection.tn%></td>
			</tr>
			<tr class="error">
				<td>False positives: <%= @detection.fp%></td>
				<td>False negatives: <%= @detection.fn%></td>
			</tr>
		</table>
	</div>
</div>
<div class="row-fluid">
	<div class="span6 offset3">
		
	</div>
</div>