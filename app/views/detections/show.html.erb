<% provide(:title, @detection.code) %>

<h1>Training</h1>

<div class="row-fluid">
	<div class="well well-small span12">
		<div class="row-fluid">
			<div class="span10 offset1">
				<p>
					Carefully look at examples for both classes. When you are ready to continue, press the button below.
				</p>
				<p>
					Training examples will remain visible during the next phase as a reference.
				</p>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<a name="samples"></a>
		<p>&nbsp;</p>
	</div>	
</div>

<div class="row-fluid">
	<div class="span6 well pull-left">
		<div class="row-fluid">
			<div class="span12">
				<p class="text-info">Some examples: <span class="label label-info">Mitosis</span></p>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12 withscroll">
				<% (0..53).each do |row_index| %>
					<div class="row-fluid">
						<ul class="thumbnails">
							<% (0..3).each do |col_index| %>
								<li class="span3">
									<a href="#samples" class="thumbnail">
										<% code = @positive_keys[row_index * 4 + col_index] %>
										<%= image_tag(@detection.positive_training[code][1], alt: code, title: code) %>
									</a>
								</li>
							<% end %>
						</ul>
					</div>
				<% end %>
			</div>
			<p class="text-info"><span class="label label-info">scroll</span> to view more samples</p>
		</div>
	</div>
	<div class="span6 well pull-right">
		<div class="row-fluid">
			<div class="span12">
				<p class="text-info">Some examples: <span class="label label-warning">NON Mitosis</span></p>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12 withscroll">
				<% (0..53).each do |row_index| %>
					<div class="row-fluid">
						<ul class="thumbnails">
							<% (0..3).each do |col_index| %>
								<li class="span3">
									<a href="#samples" class="thumbnail">
										<% code = @negative_keys[row_index * 4 + col_index] %>
										<%= image_tag(@detection.negative_training[code][1], alt: code, title: code) %>
									</a>
								</li>
							<% end %>
						</ul>
					</div>
				<% end %>
			</div>
			<p class="text-info"><span class="label label-info">scroll</span> to view more samples</p>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span12 well divCenter">
		<%= link_to "CONTINUE TO NEXT PHASE", test_detection_path(@detection), class: "btn btn-primary" %></br>
		<p class="text-info">
			<small>(training examples will remain visible)</small>
		</p>
	</div>

</div>
