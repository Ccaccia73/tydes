<% provide(:title, @detection.code) %>

<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= thumb_for @detection.user %>
				<%= @detection.code %>
			</h1>
		</section>
	</aside>
</div>
<p>
	<button type="button" id="shortlyStart">Start</button>
</p>
<p>
	<span id="shortly" class="countdown"></span>&nbsp;
</p>
<p style="clear: both;">
	<span id="monitor"></span>
</p>
<!--<p>P: <%= @positives.keys %></p>
<p>N: <%= @negatives.keys %></p>-->

<table id="trSamples">
	<tr>
		<th>Positives</th>
		<th>Negatives</th>
	</tr>
	<tr>
		<td>
			<table>
				<% (0..4).each do |row_index| %>
					<tr>
						<% (0..4).each do |col_index| %>
							<td>
								<% code = @positives.keys[row_index * 5 + col_index] %>
								<%= image_tag(@positives[code][1], alt: code, class: "sample", title: code) %>
							</td>
						<% end %>
					</tr>
				<% end %>
			</table>
		</td>
		<td>
			<table>
				<% (0..4).each do |row_index| %>
					<tr>
						<% (0..4).each do |col_index| %>
							<td>
								<% code =  @negatives.keys[row_index * 5 + col_index] %>
								<%= image_tag(@negatives[code][1], alt: code, class: "sample", title: code) %>
							</td>
						<% end %>
					</tr>
				<% end %>
			</table>
		</td>
	</tr>
</table> 

<!--
<p>Codes: <%= @detection.value.keys %></p>
<p>Values: <%= @detection.value.values %></p>
-->
<%= link_to "Start now!", test_detection_path(@detection), class: "btn btn-large btn-primary", id: "trButton" %>